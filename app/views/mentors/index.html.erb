<div class="page-header">
  <h1>Finance Industry Mentors</h1>
</div>

<p><a href="/mentors/new" class="btn btn-primary">Register a New Finance Mentor</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Finance Division</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Details</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @mentors.each do |mentor| %>
      <tr>
        <td><%= mentor.division %></td>
        <td><%= mentor.first_name %></td>
        <td><%= mentor.last_name %></td>
        <td><%= mentor.email %></td>
        <td>
          <a href="/mentors/<%= mentor.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/mentors/<%= mentor.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_mentor/<%= mentor.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

