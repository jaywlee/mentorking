<% if @center.errors.any? %>
  <% @center.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Rate Your Finance Mentor</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_center" class="form-horizontal">
      <!-- Label and input for mentor_id -->
      <div class="form-group">
        <label for="mentor_id" class="col-sm-2 control-label">
          Mentor
        </label>
        <div class="col-sm-10">
        <%= select_tag(:mentor_id, options_from_collection_for_select(Mentor.all, :id, :full_name, @center.mentor_id), :class => "form-control") %>
        </div>
      </div>

      <!-- Label and input for division_id -->

      <!-- Label and input for service_id -->
      <div class="form-group">
        <label for="service_id" class="col-sm-2 control-label">
          Service
        </label>
        <div class="col-sm-10">
        <%= select_tag(:service_id, options_from_collection_for_select(Service.all, :id, :service_name, @center.service_id), :class => "form-control") %>
        </div>
      </div>

      <!-- Label and input for ratings -->
      <div class="form-group">
        <label for="ratings" class="col-sm-2 control-label">
          Rate Your Mentor 1~5
        </label>
        <div class="col-sm-10">
          <input type="number" min="1" max="5" id="ratings" name="ratings" placeholder="Ratings" class="form-control" value="<%= @center.ratings %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Submit Your Mentor Ratings" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

