<% if @service.errors.any? %>
  <% @service.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Edit Service #<%= @service.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_service/<%= @service.id %>" class="form-horizontal">
      <!-- Label and input for service_name -->
      <div class="form-group">
        <label for="service_name" class="col-sm-2 control-label">
          Service name
        </label>
        <div class="col-sm-10">
          <input type="text" id="service_name" name="service_name" placeholder="Service name" class="form-control" value="<%= @service.service_name %>">
        </div>
      </div>

      <!-- Label and input for service_description -->
      <div class="form-group">
        <label for="service_description" class="col-sm-2 control-label">
          Service description
        </label>
        <div class="col-sm-10">
          <input type="text" id="service_description" name="service_description" placeholder="Service description" class="form-control" value="<%= @service.service_description %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Service" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

