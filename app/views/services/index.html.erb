<div class="page-header">
  <h1>Services</h1>
</div>

<p><a href="/services/new" class="btn btn-primary">Register a New Mentor Service</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Service name</th>
      <th>Service description</th>
       <th>Details</th>
       <th>Edit</th>
       <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.service_name %></td>
        <td><%= service.service_description %></td>
        <td>
          <a href="/services/<%= service.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/services/<%= service.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_service/<%= service.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

