<% if @division.errors.any? %>
  <% @division.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Add New Finance Division</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_division" class="form-horizontal">
      <!-- Label and input for division -->
      <div class="form-group">
        <label for="division" class="col-sm-2 control-label">
          Division Name
        </label>
        <div class="col-sm-10">
          <input type="text" id="division" name="division" placeholder="Division Name" class="form-control" value="<%= @division.division %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Create Division" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

